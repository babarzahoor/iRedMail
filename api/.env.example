# iRedMail Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=vmailadmin
DB_PASSWORD=your_vmailadmin_password
DB_NAME=vmail

# SMTP Configuration (Postfix)
SMTP_HOST=localhost
SMTP_PORT=587

# IMAP Configuration (Dovecot)
IMAP_HOST=localhost
IMAP_PORT=143

# iRedMail Storage Configuration
STORAGE_BASE=/var/vmail/vmail1
DOVECOT_DELIVER=/usr/libexec/dovecot/deliver

# JWT Secret for Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Optional: Enable debug logging
DEBUG=true